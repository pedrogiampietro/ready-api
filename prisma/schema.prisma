generator client {
  provider = "prisma-client-js"
  seed     = "node prisma/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String    @id @default(uuid())
  email                  String    @unique
  avatar_url             String?
  bucket_url             String?
  password               String
  name                   String
  resetPasswordToken     String?
  resetPasswordExpiresAt DateTime?
  Review                 Review[]
  trips                  Trip[]
  plan                   Plan      @relation(fields: [planId], references: [id])
  planId                 String
  created_at             DateTime  @default(now())
}

model Plan {
  id       String   @id @default(uuid())
  name     String
  features String[]
  users    User[]
}

model Trip {
  id                             String       @id @default(uuid())
  title                          String
  banner                         String?
  banner_bucket                  String?
  images                         String[]
  departureLocation              String
  destinationLocation            String
  comfortableWithPublicTransport Boolean?
  longitude                      Float
  latitude                       Float
  classLevel                     String?
  budgetTravel                   Float?
  hotelName                      String
  hotelPrice                     Float
  accommodationDuration          Int
  departureDate                  DateTime
  returnDate                     DateTime
  flightCost                     Float
  mealCost                       Float
  totalCost                      Float
  user                           User         @relation(fields: [userId], references: [id])
  userId                         String
  restaurants                    Restaurant[]
  itineraries                    Itinerary[]
  tips                           String[]
  reviews                        Review[]
  observacoes                    String[]
  dicasExtras                    String[]     @map("dicas_extras")
}

model Restaurant {
  id     String @id @default(uuid())
  name   String
  url    String
  budget String
  trip   Trip   @relation(fields: [tripId], references: [id])
  tripId String
}

model Itinerary {
  id          String   @id @default(uuid())
  date        DateTime
  activity    String
  description String
  url         String
  trip        Trip     @relation(fields: [tripId], references: [id])
  tripId      String
}

model Review {
  id      String @id @default(uuid())
  content String
  rating  Int
  trip    Trip   @relation(fields: [tripId], references: [id])
  tripId  String
  user    User   @relation(fields: [userId], references: [id])
  userId  String
}

enum PlanType {
  FREE
  PRO
}
