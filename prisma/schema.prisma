generator client {
  provider = "prisma-client-js"
  seed     = "node prisma/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String
  trips    Trip[]
}

model Trip {
  id                             String       @id @default(uuid())
  title                          String
  banner                         String?
  images                         String[]
  departureLocation              String
  destinationLocation            String
  comfortableWithPublicTransport Boolean?
  longitude                      Float
  latitude                       Float
  classLevel                     String?
  budgetTravel                   Float?
  hotelName                      String
  hotelPrice                     Float
  accommodationDuration          Int
  departureDate                  DateTime
  returnDate                     DateTime
  flightCost                     Float
  mealCost                       Float
  totalCost                      Float
  user                           User         @relation(fields: [userId], references: [id])
  userId                         String
  restaurants                    Restaurant[]
  itineraries                    Itinerary[]
  tips                           String[]
  reviews                        Review[]
  observacoes                    String[]
  dicasExtras                    String[]     @map("dicas_extras")
}

model Restaurant {
  id     String @id @default(uuid())
  name   String
  url    String
  budget String
  trip   Trip   @relation(fields: [tripId], references: [id])
  tripId String
}

model Itinerary {
  id          String   @id @default(uuid())
  date        DateTime
  activity    String
  description String
  url         String
  trip        Trip     @relation(fields: [tripId], references: [id])
  tripId      String
}

model Review {
  id      String @id @default(uuid())
  content String
  rating  Int
  trip    Trip   @relation(fields: [tripId], references: [id])
  tripId  String
}
