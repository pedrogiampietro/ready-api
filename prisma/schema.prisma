generator client {
  provider = "prisma-client-js"
  seed     = "node prisma/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String
  trips    Trip[]
  plan     Plan   @relation(fields: [planId], references: [id])
  planId   String
}

model Plan {
  id       String   @id @default(uuid())
  name     String
  features String[]
  users    User[]
}

model Trip {
  id                    String   @id @default(uuid())
  title                 String
  banner                String
  locationName          String
  longitude             Float
  latitude              Float
  images                String[]
  hotelName             String
  hotelPrice            Float
  accommodationDuration Int
  departureDate         DateTime
  returnDate            DateTime
  flightCost            Float
  mealCost              Float
  totalCost             Float
  user                  User     @relation(fields: [userId], references: [id])
  userId                String
  reviews               Review[]
}

model Review {
  id      String  @id @default(uuid())
  rating  Int
  comment String?
  trip    Trip    @relation(fields: [tripId], references: [id])
  tripId  String
}

enum PlanType {
  FREE
  PRO
}
